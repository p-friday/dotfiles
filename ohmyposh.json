{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "final_space": true,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
            "type": "status",
            "style": "plain",
            "foreground": "p:nord13",
            "foreground_templates": ["{{ if .Error }}p:nord11{{ end }}"],
            "background": "transparent",
            "template": "{{ if .Error }}✘ {{ else }} {{ end }}",
            "properties": {
                "always_enabled": true
            }
        },
        {
            "type": "path",
            "style": "plain",
            "foreground": "p:nord7",
            "background": "transparent",
            "template": "{{.Path}}",
            "properties": {
                "style": "folder"
            }
        },
        {
            "type": "git",
            "style": "plain",
            "foreground": "p:nord12",
            "background": "transparent",
            "template": " {{.HEAD}}",
            "properties": {
                "branch_icon": " "
            }
        }
      ]
    }
  ],
  "palette": {
    "nord0": "#2e3440",
    "nord1": "#3b4252",
    "nord2": "#434c5e",
    "nord3": "#4c566a",
    "nord4": "#d8dee9",
    "nord5": "#e5e9f0",
    "nord6": "#eceff4",
    "nord7": "#8fbcbb",
    "nord8": "#88c0d0",
    "nord9": "#81a1c1",
    "nord10": "#5e81ac",
    "nord11": "#bf616a",
    "nord12": "#d08770",
    "nord13": "#ebcb8b",
    "nord14": "#a3be8c",
    "nord15": "#b48ead"
  }
}
